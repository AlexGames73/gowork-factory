@model GoWorkFactoryBusinessLogic.ViewModels.UserRegisterViewModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="User" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <a class="btn btn-outline-dark" asp-action="Login" asp-controller="User">Авторизация</a>
        </div>
        <div class="form-group">
            <label asp-for="Username">Придумайте логин</label><br />
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Придумайте пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Введите Email</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <input type="submit" value="Регистрация" class="btn btn-outline-dark" />
        </div>
    </div>
</form>