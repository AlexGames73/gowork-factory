@model GoWorkFactoryBusinessLogic.ViewModels.UserLoginViewModel

<h2>Вход на сайт</h2>

<form asp-action="Login" asp-controller="User" asp-anti-forgery="true">
    <p class="lead text-danger">@Model?.Error</p>
    <div class="form-group">
        <a class="btn btn-outline-dark" asp-action="Register" asp-controller="User">Регистрация</a>
    </div>
    <div class="form-group">
        <label asp-for="Username">Введите логин</label><br />
        <input type="text" asp-for="Username" value="@Model?.Username" pattern="[a-zA-Z0-9]{8,20}" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Введите пароль</label><br />
        <input asp-for="Password" value="@Model?.Password" pattern="[a-zA-Z0-9]{6,16}" />
    </div>
    <div class="form-group">
        <input type="submit" value="Войти" class="btn btn-outline-dark" />
    </div>
</form>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("input[name=Username]")[0].oninvalid = function () {
                this.setCustomValidity("Логин должен быть в пределах от 8 до 20 символов и содержать латинские буквы или цифры");
            };
            $("input[name=Password]")[0].oninvalid = function () {
                this.setCustomValidity("Пароль должен быть в пределах от 6 до 16 символов и содержать латинские буквы или цифры");
            };
        });
    </script>
}